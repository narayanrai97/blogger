<h1>Articles</h1>

<%= will_paginate %>
<ul id="articles">
    <% @articles.each do |article| %>
        <li>
            <h3><%= article.title %></h3>
            
            <p style="font-style: italic; color: black;font-size: 15px">
                on <%= article.created_at.strftime("%B %d, %Y") %>
                (<%= article.comments.count %> comments)<br/>

                <p>
                    <%= truncate(article.body, length: 250) %>
                </p>
            </p>
            <%= link_to "Read Article", article %>
            
    
        </li>
    <% end %>
</ul>
<%= will_paginate %><br/>

<% if logged_in? %>
    <%= link_to "New Article", new_article_path, class: "new_article"%> |
    <%= link_to "Logout", logout_path, class: "auth" %>
<% else %>
    <%= link_to "Login", login_path, class: "auth" %>
<% end %>


