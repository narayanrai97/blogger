<h1>Articles (<%= @articles.count %>)</h1>
<ul id="articles">
    <% @articles.reverse.each do |article| %>
        <li style="color: blue;">
            <%= link_to article.title, article_path(article),
            class: 'article_title', id: "article_#{article.id}" %>
            (<%= article.comments.count %> comments)<br/>
            <p style="font-style: italic; color: black;">
                on <%= article.created_at.strftime("%B %d, %Y") %>
            </p>
        </li>
        
        <li>
            <%= article.body %>
        </li>
    <% end %>
</ul>

<% if logged_in? %>
    <%= link_to "Create a New Article", new_article_path, class: "new_article"%>
<% end %>


