<h3>Post a Comment</h3>
<%= form_for [ @article, @comment ] do |f| %>
    <p>
        <%= f.label :commenter, "Your Name" %><br/>
        <%= f.text_field :commenter %>
    </p>
    <p>
        <%= f.label :content, "Your Comment" %><br/>
        <%= f.text_area :content %>
    </p>
    <p>
        <%= f.submit 'Submit' %>
    </p>
<% end %>