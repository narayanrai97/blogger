<%= form_for(@event) do |f| %>
    <ul>
        <% @event.errors.full_messages.each do |error| %>
            <li><%= error %></li>
        <% end %>
    </ul>
    <p>
        <%= f.label :name %><br />
        <%= f.text_area :name %>
    </p><br>
    
    <p>
        <%= f.submit %>
    </p>
<% end %>