<h1>Photos</h1>

<div class="row">
  <% @photos.each do |photo| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag photo.image.url(:medium), class: 'image'), photo %>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Back", root_path, class: "btn btn-info" %>
<% if logged_in? %>
    <%= link_to "New Photo", new_photo_path, class: "btn btn-primary" %>
<% end %>
