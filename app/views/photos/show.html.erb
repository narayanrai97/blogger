<p id="notice"><%= notice %></p>

<p><%= image_tag @photo.image.url(:medium) %></p>
<p>
  <%= @photo.title %>
</p><br />

<%= link_to 'Back', photos_path, class: "btn btn-info" %>
<% if logged_in? %>
  <% if current_user.admin %>
    <%= link_to 'Delete', photo_path(@photo), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-warning" %>
    <%= link_to 'Edit', edit_photo_path(@photo), class: "btn btn-primary" %>
  <% end %>
<% end %>
