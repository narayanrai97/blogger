<h1>List of All Tags</h1>
<div class="container">
  <div class="row">
    <p><%= link_to "<button>Back to Articles List</button>".html_safe, articles_path %></p>
    <div class="column">
      <table class="table">
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td>
                <%= link_to tag.name, tag_path(tag) %>
              </td>
              <td>
                <%= link_to "Delete", tag_path(tag), method: :delete, 
                            data: {:confirm => "Are you sure you want to delete Tag?"}%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>