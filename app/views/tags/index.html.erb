<h1>List of All Tags (<%= @tags_total%>)</h1>
<div class="container">
  <div class="row">
    <p><%= link_to 'Back to Articles', articles_path, style: 'float: right'%></p>
    <div class="column">
      <table class="table">
        <tbody>
          <% @tags.each do |tag| %>
            <tr>
              <td>
                <%= link_to tag.name, tag_path(tag) %>
              </td>
              <td>
                <% if logged_in? %>
                  <%= link_to "Delete", tag_path(tag), method: :delete, 
                            data: {:confirm => "Are you sure you want to delete Tag?"}%>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>